@model CardTeam;

<div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="team-item text-center rounded overflow-hidden">
        <div class="rounded-circle overflow-hidden m-4">
            <img class="img-fluid" src="@Model.ImageUrl" alt="">
        </div>
        <h5 class="mb-0">@Model.Name</h5>
        <small>@Model.Designation</small>
        <div class="d-flex justify-content-center mt-3">
            <a class="btn btn-square btn-primary mx-1" href="@Model.Facebook"><i class="fab fa-facebook-f"></i></a>
            <a class="btn btn-square btn-primary mx-1" href="@Model.Twitter"><i class="fab fa-twitter"></i></a>
            <a class="btn btn-square btn-primary mx-1" href="@Model.instagram"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
</div>